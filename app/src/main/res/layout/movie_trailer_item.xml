<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/trailer_list_selector"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_trailer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_play_arrow_24"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:drawablePadding="8dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="@dimen/paddingRight"
        android:textSize="20sp"
        tools:text="Movie trailer name" />

</LinearLayout>