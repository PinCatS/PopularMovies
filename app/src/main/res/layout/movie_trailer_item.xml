<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/trailer_list_selector"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_trailer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_play_arrow_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="@dimen/paddingRight"
        android:paddingBottom="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        tools:text="Movie trailer name" />

</LinearLayout>